{
  "name": "ts-init",
  "version": "0.0.1",
  "description": "Boilerplate with TypeScript, Node.js, Jest, ESLint...",
  "main": "build/src/index.js",
  "files": [
    "build"
  ],
  "scripts": {
    "clean": "rimraf coverage build tmp",
    "test": "jest",
    "test:coverage": "npm test -- --coverage",
    "test:watch": "npm test -- --watchAll",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "start": "node build/src/index.js",
    "build": "npm run lint && npm test && tsc -w -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && npm run lint && npm test && tsc -p tsconfig.release.json",
    "docs:generate": "auto-changelog -p; rm -rf docs && typedoc src/ --plugin typedoc-plugin-markdown --out docs && git add CHANGELOG.md",
    "docs:generate:html": "auto-changelog -p; rm -rf docs-html && typedoc src/ --plugin none --out docs-html && git add CHANGELOG.md",
    "docs:update": "npm run docs:generate && git commit -m \"üìù update docs\"",
    "prettier": "prettier --config .prettierrc --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/serginator/ts-init.git"
  },
  "keywords": [
    "typescript",
    "javascript",
    "node",
    "nodejs",
    "boilerplate",
    "template",
    "jest",
    "eslint"
  ],
  "author": "Sergio Ruiz <serginator@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/serginator/ts-init/issues"
  },
  "homepage": "https://github.com/serginator/ts-init#readme",
  "auto-changelog": {
    "commitLimit": false,
    "unreleased": true,
    "sortCommits": "date-desc"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsutils": "^3.21.0",
    "typedoc-plugin-markdown": "^3.13.6",
    "typescript": "^4.9.3"
  }
}
